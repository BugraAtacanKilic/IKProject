@model UserDetailVM
@{
    Layout = "_Layout";
}

<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="~/assets/img/@Model.PhotoPath" alt="Profile" class="rounded-circle">
                    <h2>@Model.FullName</h2>
                    <h3>@Model.Unvan</h3>

                    <!--
    <span class="badge bg-primary"> @Model.FullName</span>
    <br>
    <span class="badge bg-secondary">@Model.Unvan</span>
        -->

                </div>
        </div>

    </div>

    <div class="col-xl-8">

        <div class="card">
            <div class="card-body pt-3">

                <div class="tab-content pt-2">

                    <div class="tab-pane fade show active profile-overview" id="profile-overview">

                        <h5 class="card-title">Personel Detayı</h5>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="FullName"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.FullName</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="Email"></label></div>
                            <div class="col-lg-9 col-md-8"><a href="mailto:@Model.Email">@Model.Email</a></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="PhoneNumber"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.PhoneNumber</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="TCKimlik"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.TCKimlik</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="BirthDate"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.BirthDate</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="Unvan"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.Unvan</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="Departman"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.Departman</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="StartDate"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.StartDate</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="EndDate"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.EndDate</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="Address"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.Address</label></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label "><label asp-for="IsActive"></label></div>
                            <div class="col-lg-9 col-md-8"><label>@Model.IsActive</label></div>
                        </div>
                        <a asp-controller="admin" asp-action="updateuser" asp-route-id="@Model.ID">
                            <button type="button" class="btn btn-primary btn-sm">Güncelle</button>
                        </a>

                    </div>

                    <div class="tab-pane fade pt-3" id="profile-change-password">


                    </div>

                </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>